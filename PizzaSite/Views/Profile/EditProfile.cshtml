@model ProfileViewModel

<h1>Edit Profile</h1>
<div class="container-fluid">
    <form asp-action="EditProfile" method="post" role="form">
        <div class="row">
            <div class="col-sm-2">
                <label asp-for="@Model.User.FirstName">First Name:</label>
            </div>
            <div class="col-sm-2">
                <input type="text" asp-for="@Model.User.FirstName" value="@Model.User.FirstName" class="form-control" />
            </div>
            <div class="col-sm-1">

            </div>
            <div class="col-sm-2">
                <label asp-for="@Model.User.LastName">Last Name:</label>
            </div>
            <div class="col-sm-2">
                <input asp-for="@Model.User.LastName" type="text" value="@Model.User.LastName" class="form-control"/>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2" style="padding-top:15px;">
                <label asp-for="@Model.User.Email">Email:</label>
            </div>
            <div class="col-sm-2"style="padding-top:15px;">
                <input type="text" asp-for="@Model.User.Email" value="@Model.User.Email" class="form-control"/>
            </div>
            <div class="col-sm-1"style="padding-top:15px;">

            </div>
            <div class="col-sm-2"style="padding-top:15px;">
                <label asp-for="@Model.User.PhoneNumber">Phone Number:</label>
            </div>
            <div class="col-sm-2"style="padding-top:15px;">
                <input asp-for="@Model.User.PhoneNumber" type="text" value="@Model.User.PhoneNumber" class="form-control"/>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2"style="padding-top:15px;">
                <label asp-for="@Model.User.Password">Password:</label>
            </div>
            <div class="col-sm-2"style="padding-top:15px;">
                <input asp-for="@Model.User.Password" type="password" value="@Model.User.Password" class="form-control"/>
            </div>
            <div class="col-sm-4"style="padding-top:15px;">

            </div>
            <div class="col-sm-1"style="padding-top:15px;">
                <input type="submit" class="btn btn-primary pull-right">
            </div>
        </div>
    </form>
</div>
