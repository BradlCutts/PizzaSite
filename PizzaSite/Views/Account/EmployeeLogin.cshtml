@model LoginViewModel

<h1> Emplyee Login</h1>

<div class="container-fluid">
    <div class="row">
        <form asp-controller="Account" asp-action="EmployeeLogin" method="post">

            <div class="row">
                <div class="col-sm-4">
                    <label asp-for="@Model.Id" class="control-label">Id:</label>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <input asp-for="@Model.Id" type="text" class="form-control">
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <label asp-for="@Model.password" class="control-label">Password:</label>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <input asp-for="@Model.password" type="password" class="form-control">
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2" style="padding-top:15px;">
                    <input type="submit" class="btn btn-success" value="Log in">
                </div>

            </div>
        </form>
    </div>
</div>