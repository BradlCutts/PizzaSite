@model LoginViewModel

<h1>Login</h1>

    <div class="container-fluid">
        <div class="row">
            <form asp-controller="Account" asp-action="Login" method="post">

                <div class="row">
                    <div class="col-sm-4">
                        <label asp-for="@Model.Email" class="control-label">Email:</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <input asp-for="@Model.Email" type="text" class="form-control">
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <label asp-for="@Model.password" class="control-label">Password:</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <input asp-for="@Model.password" type="password" class="form-control">
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-2" style="padding-top:15px;">
                        <input type="submit" class="btn btn-success" value="Log in">
                    </div>

                </div>
            </form>
        </div>
        <div class="row">
            <div class="col-sm-2" style="padding-top:15px;">
                <h4>Not a customer?</h4>
            </div>
            <div class="col-sm-4" style="padding-top:15px;">
                <a asp-controller="Account" asp-action="EmployeeLogin" class="btn btn-info">Employee Login</a>
            </div>
        </div>



    </div>