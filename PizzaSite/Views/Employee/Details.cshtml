@{ 
    Layout = "_EmployeeLayout";
}
@model OrderItemViewModel


<h1>Item Details:</h1>
<br>
<h2>@Model.Title</h2>

<div class="container-fluid" style="background-color:Window">
<table class="table table-striped">
    <tr>
        <th>Size:</th>
        <td>@Model.Size.Title</td>
    </tr>
    <tr>
        <th>Cut:</th>
        <td>@Model.Cut.Title</td>
    </tr>
    <tr>
        <th>Crust:</th>
        <td>@Model.Crust.Title</td>
    </tr>
    <tr>
        <th>Sauces:</th>
        
            
        <td>
            @for (int i = 0; i < Model.Sauces.Count; i++)
            {
                if (i > 0)
                {
                    <em>, </em>
                }
                @Model.Sauces[i].Title


            }
        </td>
            

    </tr>
    <tr>
        <th>Toppings:</th>
        <td>
            @for (int i = 0; i < Model.Toppings.Count; i++)
            {
                if (i > 0)
                {
                    <em>, </em>
                }
                @Model.Toppings[i].Title


            }


            
        </td>
    </tr>
    </table>
    <h3>Special Instructions:</h3>
    <p>@Model.SpecialInstructions</p>
</div>