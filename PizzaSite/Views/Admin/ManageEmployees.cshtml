@model EmployeesViewModel
@{
    Layout = "_EmployeeLayout";
}
<h1>Manage Employees</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model.Employees)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.LastName, @employee.FirstName</td>
                <td>@employee.Role</td>
                @if (employee.Role == "Admin")
                {
                    <td><a asp-controller="Admin" asp-action="changeAdminStatus" asp-route-id="@employee.Id" class="btn btn-warning">Remove Admin</a></td>
                }
                else
                {
                    <td><a asp-controller="Admin" asp-action="changeAdminStatus" asp-route-id="@employee.Id" class="btn btn-info">Make Admin</a></td>
                }
                <td><a asp-controller="Admin" asp-action="RemoveEmployee" asp-route-id="@employee.Id" class="btn btn-danger">Remove</a></td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Admin" asp-action="CreateEmployee" class="btn btn-primary">Create new employee</a>